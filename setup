#!/bin/bash

# Set up XDG_CONFIG_HOME
export XDG_CONFIG_HOME="$HOME"/.config
mkdir -p "$XDG_CONFIG_HOME"

ln -sf "$PWD/nvim" "$XDG_CONFIG_HOME"/nvim
ln -sf "$PWD/lazygit" "$XDG_CONFIG_HOME"/lazygit

sudo mkdir /home/linuxbrew/
sudo chown $USER:users /home/linuxbrew/

NONINTERACTIVE=1 USER=appuser /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

/home/linuxbrew/.linuxbrew/bin/brew shellenv >>~/.profile

packages=(
  fd
  ripgrep
  fish
  node
  httpyac
  lazygit
  git-delta
  neovim
)

# Iterate over the array and install each package
for package in "${packages[@]}"; do
  echo "Installing $package..."
  brew install "$package"
done

echo "All packages have been installed."
